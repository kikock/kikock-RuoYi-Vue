<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysSocialAppMapper">

    <resultMap type="com.ruoyi.system.domain.SysSocialApp" id="SysSocialAppResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="appKey" column="app_key"/>
        <result property="appSecret" column="app_secret"/>
        <result property="code" column="code"/>
        <result property="url" column="url"/>
        <result property="corpId" column="corp_id"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectSysSocialAppVo">
        select id, name, type, app_key, app_secret, code, corp_id, url,status, del_flag, create_by, create_time, update_by, update_time, remark from
        sys_social_app
    </sql>

    <select id="selectSysSocialAppList" parameterType="SysSocialApp" resultMap="SysSocialAppResult">
        <include refid="selectSysSocialAppVo"/>
        <where>
            <if test="name != null  and name != ''"> and name
                like concat('%', #{name}, '%')
            </if>
            <if test="type != null "> and type =
                #{type}
            </if>
            <if test="status != null  and status != ''"> and status =
                #{status}
            </if>
        </where>
    </select>

    <select id="selectSysSocialAppById" parameterType="Long"
            resultMap="SysSocialAppResult">
        <include refid="selectSysSocialAppVo"/>
        where id = #{id}
    </select>

    <insert id="insertSysSocialApp" parameterType="SysSocialApp"  useGeneratedKeys="true"
            keyProperty="id" >
        insert into sys_social_app
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="appKey != null">
                app_key,
            </if>
            <if test="appSecret != null">
                app_secret,
            </if>
            <if test="code != null and code != ''">
                code,
            </if>
            <if test="corpId != null">
                corp_id,
            </if>
            <if test="url != null and url != ''">
                url,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
            <if test="createBy != null">
                create_by,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateBy != null">
                update_by,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="appKey != null">
                #{appKey},
            </if>
            <if test="appSecret != null">
                #{appSecret},
            </if>
            <if test="code != null and code != ''">
                #{code},
            </if>
            <if test="corpId != null">
                #{corpId},
            </if>
            <if test="url != null and url != ''">
                #{url},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
            <if test="createBy != null">
                #{createBy},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateBy != null">
                #{updateBy},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
        </trim>
    </insert>

    <update id="updateSysSocialApp" parameterType="SysSocialApp">
        update sys_social_app
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="appKey != null">
                app_key = #{appKey},
            </if>
            <if test="appSecret != null">
                app_secret = #{appSecret},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="corpId != null">
                corp_id = #{corpId},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysSocialAppById" parameterType="Long">
        delete from sys_social_app where id = #{id}
    </delete>

    <delete id="deleteSysSocialAppByIds" parameterType="String">
        delete from sys_social_app where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="checkCodeExists" resultType="boolean">
        SELECT COUNT(*) > 0 FROM sys_social_app WHERE code = #{code}
    </select>


    <resultMap type="SocialAppVo" id="UserSocialAppResult">
        <id     property="id"        column="id"         />
        <result property="source"      column="source"        />
    </resultMap>
    <!--    用户第三方绑定状态-->
    <select id="getInitSysSocialAppList"  resultMap="UserSocialAppResult">
        SELECT
        sa.id,
        sa.code as source
        FROM
        sys_social_app sa
    </select>
</mapper>
