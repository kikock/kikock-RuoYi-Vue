<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.flowable.mapper.definition.BpmFormMapper">
    <resultMap type="BpmForm" id="BpmFormResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="conf" column="conf"/>
        <result property="fields" column="fields"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectBpmFormVo">
        select id,
               name,
               status,
               conf,
               fields,
               del_flag,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from bpm_form
    </sql>

    <select id="selectBpmFormList" parameterType="BpmForm" resultMap="BpmFormResult">
        <include refid="selectBpmFormVo"/>
        <where>
            <if test="name != null  and name != ''">
                and name
                like concat('%', #{name}, '%')
            </if>
            <if test="status != null">
                and status =
                #{status}
            </if>
            <if test="conf != null  and conf != ''">
                and conf =
                #{conf}
            </if>
            <if test="fields != null  and fields != ''">
                and fields =
                #{fields}
            </if>
        </where>
    </select>

    <select id="selectBpmFormById" parameterType="Long"
            resultMap="BpmFormResult">
        <include refid="selectBpmFormVo"/>
        where id = #{id}
    </select>

    <insert id="insertBpmForm" parameterType="BpmForm" useGeneratedKeys="true"
            keyProperty="id">
        insert into bpm_form
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                name,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="conf != null and conf != ''">
                conf,
            </if>
            <if test="fields != null and fields != ''">
                fields,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
            <if test="createBy != null">
                create_by,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateBy != null">
                update_by,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="conf != null and conf != ''">
                #{conf},
            </if>
            <if test="fields != null and fields != ''">
                #{fields},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
            <if test="createBy != null">
                #{createBy},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateBy != null">
                #{updateBy},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
        </trim>
    </insert>

    <update id="updateBpmForm" parameterType="BpmForm">
        update bpm_form
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="conf != null and conf != ''">
                conf = #{conf},
            </if>
            <if test="fields != null and fields != ''">
                fields = #{fields},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBpmFormById" parameterType="Long">
        delete from bpm_form where id = #{id}
    </delete>

    <delete id="deleteBpmFormByIds" parameterType="String">
        delete from bpm_form where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>



    <select id="selectBatchIds"  resultMap="BpmFormResult">
        <include refid="selectBpmFormVo"/>
        <where>
            id in
            <foreach item="id" collection="list" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
    </select>
    <select id="flowFormDatas" parameterType="String"
            resultMap="BpmFormResult">
        <include refid="selectBpmFormVo"/>
        <where>
            status = '0'
            <if test="keywords != null and keywords != ''"> and  ( name like concat('%', #{keywords}, '%'))</if>
            order by create_time desc
        </where>
    </select>
</mapper>
